                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tv_desc_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/comp_text_desc"
                        android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_data_3_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:id="@+id/tv_data_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/txt_highlight"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tv_desc_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/comp_text_desc"
                        android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:visibility="gone"
