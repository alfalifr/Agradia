<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_solid_square_round_edge_fill"
            android:backgroundTint="@color/colorPrimaryDark">


        <RelativeLayout
                android:id="@+id/rl_container_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <!-- <ImageView
                     android:visibility="gone"
                     android:id="@+id/iv_bg"
                     android:layout_width="match_parent"
                     android:layout_height="125dp"
                     android:src="@drawable/shape_solid_square_round_edge_fill"
                     android:tint="@color/colorPrimaryDark"/>-->
            <LinearLayout
                    android:id="@+id/ll_title_container_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_title_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/comp_text_title_sub"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_desc_highlight_left"
                    android:layout_below="@id/ll_title_container_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/text_template_title"
                    android:textSize="@dimen/txt_highlight"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_container_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <!--  <ImageView
                      android:visibility="gone"
                      android:id="@+id/iv_bg"
                      android:layout_width="match_parent"
                      android:layout_height="125dp"
                      android:src="@drawable/shape_solid_square_round_edge_fill"
                      android:tint="@color/colorPrimaryDark"/>-->
            <LinearLayout
                    android:id="@+id/ll_title_container_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_title_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/comp_text_title_sub"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_desc_highlight_right"
                    android:layout_below="@id/ll_title_container_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/text_template_title"
                    android:textSize="@dimen/txt_highlight"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>