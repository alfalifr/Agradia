<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_pict"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/pict_tile_menu"
                    android:layout_height="@dimen/pict_tile_menu"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:background="@drawable/shape_solid_square_round_edge_fill"
                    android:backgroundTint="@color/colorPrimaryDark"/>
                <TextView
                        android:id="@+id/tv_title"
                        android:layout_below="@id/iv_pict"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="@dimen/txt_tile_menu_container"
                        android:layout_height="wrap_content"
                        android:text="@string/text_template_title"
                        android:textSize="@dimen/txt_tile_title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"/>
            </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>