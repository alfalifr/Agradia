<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/comp_text_desc"
            android:textColor="@color/black"
            android:text="Ini teks di kirinya"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
        <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/comp_text_desc"
                android:textColor="@color/black"
                android:text="Ini teks di kanannya"/>


        <ImageView
                android:visibility="gone"
                android:id="@+id/iv_action"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_width="@dimen/pict_txt_fil_action_border"
                android:layout_height="@dimen/pict_txt_fil_action_border"
                android:tint="@color/grey_icon"
                android:src="@color/grey_icon"/>
    </LinearLayout>

</RelativeLayout>